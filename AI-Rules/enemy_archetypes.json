{
  "schema": "veinbreaker.enemy_archetypes.v1",

  "archetypes": [
    {
      "id": "brute",
      "description": "Slow, oppressive pressure that punishes overcommitment.",
      "role": "pressure",
      "behavior": {
        "preferredTargets": ["highest_heat", "negative_balance"],
        "engagementStyle": "direct",
        "movementBias": "advance",
        "riskTolerance": "high"
      },
      "interruptProfile": {
        "maxPerRound": 1,
        "preferredTriggers": ["overcommit", "negative_balance"],
        "interruptStyle": "heavy",
        "telegraph": "obvious"
      },
      "pressureEffects": [
        "force_balance_negative",
        "deny_positioning"
      ],
      "aiPriorities": [
        "close_distance",
        "force_long_chains",
        "punish_greed"
      ]
    },

    {
      "id": "stalker",
      "description": "Exploits movement, isolation, and momentary lapses.",
      "role": "execution",
      "behavior": {
        "preferredTargets": ["isolated", "moving", "low_momentum"],
        "engagementStyle": "hit_and_fade",
        "movementBias": "flank",
        "riskTolerance": "medium"
      },
      "interruptProfile": {
        "maxPerRound": 1,
        "preferredTriggers": ["movement_during_chain", "miss"],
        "interruptStyle": "precise",
        "telegraph": "subtle"
      },
      "pressureEffects": [
        "threaten_interrupts",
        "force_reposition"
      ],
      "aiPriorities": [
        "wait_for_mistake",
        "interrupt_movement",
        "separate_targets"
      ]
    },

    {
      "id": "controller",
      "description": "Shapes the battlefield and constrains player options.",
      "role": "control",
      "behavior": {
        "preferredTargets": ["high_momentum", "grouped"],
        "engagementStyle": "zone_control",
        "movementBias": "hold",
        "riskTolerance": "low"
      },
      "interruptProfile": {
        "maxPerRound": 1,
        "preferredTriggers": ["negative_balance"],
        "interruptStyle": "disruptive",
        "telegraph": "ritualized"
      },
      "pressureEffects": [
        "add_hazards",
        "limit_safe_spaces"
      ],
      "aiPriorities": [
        "control_space",
        "force_bad_choices",
        "deny_resets"
      ]
    },

    {
      "id": "harrier",
      "description": "Constant harassment that tests defensive discipline.",
      "role": "tempo",
      "behavior": {
        "preferredTargets": ["low_resolve", "recently_defended"],
        "engagementStyle": "poke_and_pressure",
        "movementBias": "circulate",
        "riskTolerance": "medium"
      },
      "interruptProfile": {
        "maxPerRound": 1,
        "preferredTriggers": ["any_exposure"],
        "interruptStyle": "frequent",
        "telegraph": "erratic"
      },
      "pressureEffects": [
        "drain_resolve",
        "force_defense_spend"
      ],
      "aiPriorities": [
        "force_reactions",
        "bleed_resources",
        "break_focus"
      ]
    }
  ],

  "globalRules": {
    "archetypesDoNotOverrideInvariants": true,
    "archetypesCannotGrantExtraInterrupts": true,
    "archetypesCannotIgnoreDamageEndsChain": true,
    "archetypesDefineIntentNotOutcomes": true
  }
}
